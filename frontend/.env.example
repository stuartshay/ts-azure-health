# Frontend (SPA) Configuration
NEXT_PUBLIC_AAD_CLIENT_ID=<your-spa-app-registration-client-id>
NEXT_PUBLIC_AAD_TENANT_ID=<your-azure-tenant-id>
NEXT_PUBLIC_REDIRECT_URI=http://localhost:3000
NEXT_PUBLIC_API_SCOPE=api://<your-bff-app-registration-client-id>/user_impersonation

# BFF (Backend-for-Frontend) Configuration
AAD_BFF_CLIENT_ID=<your-bff-app-registration-client-id>
AAD_BFF_CLIENT_SECRET=<your-bff-app-registration-client-secret>
AAD_TENANT_ID=<your-azure-tenant-id>

# Downstream API Configuration
AAD_DOWNSTREAM_SCOPE=<downstream-api-scope>
DOWNSTREAM_API_URL=<downstream-api-url>

# Azure Key Vault Configuration
KV_URL=https://<your-keyvault-name>.vault.azure.net/
KV_SECRET_NAME=<secret-name-to-read>

# Azure Managed Identity (optional - for local dev, uses DefaultAzureCredential)
# AZURE_CLIENT_ID=<user-assigned-managed-identity-client-id>

# ==============================================
# Figma Configuration (Server-side only)
# ==============================================

# Figma Personal Access Token - NEVER expose to browser
# Generate at: https://www.figma.com/developers/api#access-tokens
# Required scopes: current_user:read, file_content:read, file_metadata:read
# Free tier: 60 req/min - caching implemented to minimize API calls
FIGMA_API_TOKEN=<your-figma-personal-access-token>

# Optional: Default Figma file key for API operations
# Extract from file URL: https://www.figma.com/file/[FILE_KEY]/filename
FIGMA_FILE_KEY=<optional-default-figma-file-key>
